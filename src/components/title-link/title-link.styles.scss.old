.title-link {
    display: flex;
    justify-content: flex-start;
    width: 100%;
    margin-left: 30px;

    .actual-title {
        font-size: 30px;
        transition: color 0.5s ease-out;
        font-weight: bold;
        text-decoration: none;
        text-align: left;
        margin-left: 0;
        margin-right: auto;
    }

    .actual-title:hover {
        color: rgb(97, 187, 223);
        cursor: pointer;
    }
}